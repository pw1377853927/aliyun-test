.container {
    width: 100%;
    height: 100%;
    margin-top: 130rpx;
}

.header-container {
    background-color: #fff;
}

.iphone {
    margin-top: 180rpx;
}

.kanjia-list {
    width: 100%;
    height: 130px;
    padding-bottom: 5px;
    border-bottom: 1px solid #f5f5f5;
    padding-top: 15px;
    font-weight: 300;
}

.kanjia-list .goods {
    width: 110px;
    height: 110px;
    float: left;
    border-radius: 6rpx;
    margin-left: 10px;
}

.list-box-title {
    padding-left: 15px;
}

.list-box {
    color: #333;
    font-size: 30rpx;
    float: left;
    padding-top: 10px;
    width: 62%;
}

.list-box-info {
    color: #999;
    font-size: 24rpx;
    padding-top: 2px;
    padding-bottom: 15px;
    padding-left: 15px;
}

.list-box-kjmin {
    display: inline-block;
    text-align: center;
    width: 30%;
    font-size: 24rpx;
    border-right: 1px solid #f5f5f5;
}

.list-box-kjmin text {
    display: block;
    color: #b5272d;
    font-size: 32rpx;
}

.list-box-kjmax {
    display: inline-block;
    text-align: center;
    width: 30%;
    font-size: 24rpx;
    color: #999;
    border-right: 1px solid #f5f5f5;
}

.list-box-kjmax text {
    display: block;
    font-size: 28rpx;
}

.list-box-sales {
    display: inline-block;
    text-align: center;
    width: 30%;
    font-size: 24rpx;
    color: #999;
}

.list-box-sales text {
    display: block;
    font-size: 28rpx;
}